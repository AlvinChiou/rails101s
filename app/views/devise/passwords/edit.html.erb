<div class="col-md-4 col-md-offset-4">
  <h2>變更您的密碼</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <%= f.input :reset_password_token, as: :hidden %>
    <%= f.full_error :reset_password_token %>

    <div class="form-group">
      <%= f.input :password, label: "新的密碼", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { class: "form-control" } %>
      <%= f.input :password_confirmation, label: "再次輸入新的密碼", required: true, input_html: { class: "form-control" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "變更我的密碼", class:"btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
